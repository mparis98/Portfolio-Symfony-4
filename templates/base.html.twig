<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">

        <!--<![endif]-->


            <!--- basic page needs
            ================================================== -->

            <title>{% block title %}Portfolio Matthieu Paris {% endblock %}</title>
            <meta name="description" content="">
            <meta name="author" content="">

            <!-- mobile specific metas
            ================================================== -->
            <meta name="viewport" content="width=device-width, initial-scale=1">

            <!-- CSS
            ================================================== -->
            <link rel="stylesheet" href="{{ asset(assets_url ~ 'css/base.css') }}">
            <link rel="stylesheet" href="{{ asset(assets_url ~ 'css/vendor.css') }}">
            <link rel="stylesheet" href="{{ asset(assets_url ~ 'css/main.css') }}">

            <!-- script
            ================================================== -->
            <script src="{{ asset(assets_url ~ 'js/modernizr.js') }}"></script>
            <script src="{{ asset(assets_url ~ 'js/pace.min.js') }}"></script>

            <!-- favicons
            ================================================== -->
            <link rel="shortcut icon" href="{{ asset(assets_url ~ 'img/favicon.ico') }}" type="image/x-icon">
            <link rel="icon" href="{{ asset(assets_url ~ 'img/favicon.ico') }}" type="image/x-icon">



        {% block stylesheets %}
            <style type="text/css">

                .stage1{
                    -webkit-transition: all 1.5s ease; /* Safari et Chrome */
                    -moz-transition: all 1.5s ease; /* Firefox */
                    -ms-transition: all 1.5s ease; /* Internet Explorer 9 */
                    -o-transition: all 1.5s ease; /* Opera */
                    transition: all 1.5s ease;
                }

                .stage2{
                    -webkit-transition: all 1.5s ease; /* Safari et Chrome */
                    -moz-transition: all 1.5s ease; /* Firefox */
                    -ms-transition: all 1.5s ease; /* Internet Explorer 9 */
                    -o-transition: all 1.5s ease; /* Opera */
                    transition: all 1.5s ease;
                }

                .stage1:hover{
                    transform: scale(1.3);
                    cursor: pointer;
                }
                .stage2:hover{
                    transform: scale(1.3);
                    cursor: pointer;
                }
            </style>{% endblock %}
    </head>
    <nav>
        {% include 'nav.html.twig' %}
    </nav>
    <body id="top">
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="{{ asset(assets_url ~ 'js/jquery-3.2.1.min.js') }}"></script>
            <script src="{{ asset(assets_url ~ 'js/plugins.js') }}"></script>
            <script src="{{ asset(assets_url ~ 'js/main.js') }}"></script>
        {% endblock %}
    </body>
</html>
